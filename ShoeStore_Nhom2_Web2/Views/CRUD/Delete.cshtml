@model Shoe_Model
<section class="banner-area organic-breadcrumb">
    <h1>Are you sure you want to delete this shoe?</h1>
    <form asp-controller="CRUD" asp-action="DeleteConfirmed" asp-route-id="@Model.Id" method="post">
        <dl class="row">
            <dt class="col-sm-2">Id</dt>
            <dd class="col-sm-10">@Model.Id</dd>
            <dt class="col-sm-2">Image Url</dt>
            <dd class="col-sm-10">@Model.ImageUrl</dd>
            <dt class="col-sm-2">Name</dt>
            <dd class="col-sm-10">@Model.Name</dd>
            <dt class="col-sm-2">Price</dt>
            <dd class="col-sm-10">@Model.Price</dd>
            <dt class="col-sm-2">Old Price</dt>
            <dd class="col-sm-10">@Model.Old_Price</dd>
            <dt class="col-sm-2">Brand</dt>
            <dd class="col-sm-10">@Model.Brand</dd>
            <dt class="col-sm-2">Color</dt>
            <dd class="col-sm-10">@Model.Color</dd>
            <dt class="col-sm-2">Size</dt>
            <dd class="col-sm-10">@Model.Size</dd>
            <dt class="col-sm-2">Remaining</dt>
            <dd class="col-sm-10">@Model.Remaining</dd>


            <!-- Thêm các thuộc tính khác của shoe tại đây -->
        </dl>
        <input type="submit" value="Delete" class="btn btn-danger" />
        <a asp-action="Index">Cancel</a>
    </form>

</section>
